<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!--        Tree view start-->
        <record id="attendance_sheet_view_tree" model="ir.ui.view">
            <field name="name">attendance_sheet_view_tree</field>
            <field name="model">se.attendance.management.system</field>
            <field name="arch" type="xml">
                <tree decoration-success="state == 'done'" decoration-danger="state == 'cancel'" multi_edit="1">
                    <field name="attendance_date"/>
                    <field name="name"/>
                    <field name="program_id"/>
                    <field name="semester_id"/>
                    <field name="section"/>
                </tree>
            </field>
        </record>
        <!--    Tree view end-->

        <!--    form view start-->
        <record id="attendance_sheet_view_form" model="ir.ui.view">
            <field name="name">attendance_sheet_view_form</field>
            <field name="model">se.attendance.management.system</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group>
                                <field name="attendance_date" readonly="True"/>
                                <field name="name" readonly="True"/>
                            </group>
                            <group>
                                <field name="total_student" readonly="True"/>
                                <field name="total_present_student" readonly="True"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!--    form view end-->

        <record id="open_view_attendance_sheet_action_1" model="ir.actions.act_window">
            <field name="name">Sheet</field>
            <field name="res_model">se.attendance.management.system</field>
            <field name="type">ir.actions.act_window</field>
            <field name="view_mode">tree,form</field>

        </record>

    </data>

</odoo>
